<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:id="@+id/img_bitki"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="@+id/img_bitki"
            android:layout_marginTop="20dp" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/img_bitki" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.009">


        <TextView
                android:text="Başlık"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/txt_baslik" android:fontFamily="@font/aclonica"/>
        <TextView
                android:text="Vitamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_vitamin"
                android:fontFamily="@font/pacifico"
                android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>